#
###############################################################################

server:
{% for k,v in config.get('server').items() %}
    {%- if v is iterable %}
    {%- for i in v %}
    {{ directive(k) }}: {{ safe_print(v) }}
    {%- endfor %}
    {%- else %}
    {{ directive(k) }}: {{ safe_print(v) }}
    {%- endif -%}
{%- endfor %}

{%- if 'stub_zone' in config %}
{% for zone in config['stub_zone'] %}
stub-zone:
    name: "{{ zone.name }}"
    {% do zone.remove('name') %}
{% for k,v in zone.items() %}
    {%- if v is iterable %}
    {%- for i in v %}
    {{ directive(k) }}: {{ safe_print(v) }}
    {%- endfor %}
    {%- else %}
    {{ directive(k) }}: {{ safe_print(v) }}
    {%- endif -%}
{%- endfor %}
{%- endfor %}
{%- endif -%}

{%- if 'forward_zone' in config %}
    {% for zone in config['forward_zone'] %}
forward-zone:
    name: "{{ zone.name }}"
    {% do zone.remove('name') %}
{% for k,v in zone.items() %}
    {%- if v is iterable %}
    {%- for i in v %}
    {{ directive(k) }}: {{ safe_print(v) }}
    {%- endfor %}
    {%- else %}
    {{ directive(k) }}: {{ safe_print(v) }}
    {%- endif -%}
{%- endfor %}
{%- endfor %}
{%- endif -%}
