unbound:
    server:
        interfaces:
            - 8.8.8.8
        domains_insecure:
            - domain.tld
        local_zones:
            - domain.tld
        options:
            # an option is config settings which can't have multiple clauses
            - key: <option_name>
              value: <option_value>
    stubzones:
        - zonename: domain.tld:
          options:
            - key: stub-addr
              value: 8.8.8.8
            - key: stub-addr
              value: 8.8.4.4
    forwardzones:
        - zonename: domain2.tld:
          options:
            - key: forward-addr
              value: 8.8.8.8
            - key: forward-addr
              value: 8.8.4.4
    lookup:
        config_file: /usr/local/etc/unbound/unbound.conf

